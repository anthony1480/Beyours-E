{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-before-after-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-before-after__container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: {{ block.settings.image_max_width }}px;
    margin: 0 auto;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    border: {{ block.settings.border_thickness }}px solid {{ block.settings.border_color }};
    background-color: {{ block.settings.placeholder_bg_color }};
    user-select: none;
  }

  .ai-before-after__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-before-after__after-{{ ai_gen_id }} {
    clip-path: inset(0 0 0 50%);
  }

  .ai-before-after__slider-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 50%;
    width: {{ block.settings.slider_width }}px;
    height: 100%;
    transform: translateX(-50%);
    cursor: ew-resize;
    z-index: 10;
  }

  .ai-before-after__slider-line-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 50%;
    width: {{ block.settings.line_thickness }}px;
    height: 100%;
    background-color: {{ block.settings.slider_color }};
    transform: translateX(-50%);
    pointer-events: none;
  }

  .ai-before-after__slider-button-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    width: {{ block.settings.button_size }}px;
    height: {{ block.settings.button_size }}px;
    background-color: {{ block.settings.slider_color }};
    border: {{ block.settings.button_border }}px solid {{ block.settings.button_border_color }};
    border-radius: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .ai-before-after__slider-arrows-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
    color: {{ block.settings.arrow_color }};
  }

  .ai-before-after__slider-arrows-{{ ai_gen_id }} svg {
    width: {{ block.settings.arrow_size }}px;
    height: {{ block.settings.arrow_size }}px;
  }

  .ai-before-after__label-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.label_position_top }}px;
    padding: {{ block.settings.label_padding }}px {{ block.settings.label_padding | times: 1.5 }}px;
    background-color: {{ block.settings.label_bg_color }};
    color: {{ block.settings.label_text_color }};
    font-size: {{ block.settings.label_font_size }}px;
    font-weight: {{ block.settings.label_font_weight }};
    border-radius: {{ block.settings.label_border_radius }}px;
    pointer-events: none;
    z-index: 5;
  }

  .ai-before-after__label-before-{{ ai_gen_id }} {
    left: {{ block.settings.label_position_side }}px;
  }

  .ai-before-after__label-after-{{ ai_gen_id }} {
    right: {{ block.settings.label_position_side }}px;
  }

  .ai-before-after__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-before-after__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-before-after__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    font-size: 13px;
    color: {{ block.settings.text_color }};
    text-align: center;
    pointer-events: none;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
  }

  @media screen and (max-width: 749px) {
    .ai-before-after__slider-button-{{ ai_gen_id }} {
      width: {{ block.settings.button_size | times: 0.8 }}px;
      height: {{ block.settings.button_size | times: 0.8 }}px;
    }

    .ai-before-after__label-{{ ai_gen_id }} {
      font-size: {{ block.settings.label_font_size | times: 0.9 }}px;
      padding: {{ block.settings.label_padding | times: 0.8 }}px {{ block.settings.label_padding | times: 1.2 }}px;
    }
  }
{% endstyle %}

<before-after-slider-{{ ai_gen_id }}
  class="ai-before-after-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-before-after__container-{{ ai_gen_id }}" data-container>
    {% if block.settings.before_image %}
      <img
        src="{{ block.settings.before_image | image_url: width: 1200 }}"
        alt="{{ block.settings.before_image.alt | default: 'Before' | escape }}"
        class="ai-before-after__image-{{ ai_gen_id }}"
        loading="lazy"
        width="1200"
        height="1200"
      >
    {% else %}
      <div class="ai-before-after__placeholder-{{ ai_gen_id }}">
        {{ 'product-1' | placeholder_svg_tag }}
        <div class="ai-before-after__empty-state-{{ ai_gen_id }}">
          Add before image
        </div>
      </div>
    {% endif %}

    {% if block.settings.after_image %}
      <img
        src="{{ block.settings.after_image | image_url: width: 1200 }}"
        alt="{{ block.settings.after_image.alt | default: 'After' | escape }}"
        class="ai-before-after__image-{{ ai_gen_id }} ai-before-after__after-{{ ai_gen_id }}"
        data-after-image
        loading="lazy"
        width="1200"
        height="1200"
      >
    {% else %}
      {% if block.settings.before_image %}
        <div class="ai-before-after__placeholder-{{ ai_gen_id }}" style="clip-path: inset(0 0 0 50%);">
          {{ 'product-1' | placeholder_svg_tag }}
          <div class="ai-before-after__empty-state-{{ ai_gen_id }}">
            Add after image
          </div>
        </div>
      {% endif %}
    {% endif %}

    {% if block.settings.show_labels %}
      {% if block.settings.before_label != blank %}
        <div class="ai-before-after__label-{{ ai_gen_id }} ai-before-after__label-before-{{ ai_gen_id }}">
          {{ block.settings.before_label }}
        </div>
      {% endif %}
      {% if block.settings.after_label != blank %}
        <div class="ai-before-after__label-{{ ai_gen_id }} ai-before-after__label-after-{{ ai_gen_id }}">
          {{ block.settings.after_label }}
        </div>
      {% endif %}
    {% endif %}

    <div class="ai-before-after__slider-{{ ai_gen_id }}" data-slider>
      <div class="ai-before-after__slider-line-{{ ai_gen_id }}"></div>
      <div class="ai-before-after__slider-button-{{ ai_gen_id }}">
        <div class="ai-before-after__slider-arrows-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </div>
      </div>
    </div>
  </div>
</before-after-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class BeforeAfterSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.isDragging = false;
      }

      connectedCallback() {
        this.style.display = 'block';
        this.container = this.querySelector('[data-container]');
        this.slider = this.querySelector('[data-slider]');
        this.afterImage = this.querySelector('[data-after-image]');

        if (!this.container || !this.slider) return;

        this.setupEventListeners();
      }

      setupEventListeners() {
        this.slider.addEventListener('mousedown', this.startDragging.bind(this));
        this.slider.addEventListener('touchstart', this.startDragging.bind(this), { passive: true });

        document.addEventListener('mousemove', this.onDrag.bind(this));
        document.addEventListener('touchmove', this.onDrag.bind(this), { passive: false });

        document.addEventListener('mouseup', this.stopDragging.bind(this));
        document.addEventListener('touchend', this.stopDragging.bind(this));
      }

      startDragging(e) {
        this.isDragging = true;
        this.container.style.cursor = 'ew-resize';
      }

      stopDragging() {
        this.isDragging = false;
        this.container.style.cursor = '';
      }

      onDrag(e) {
        if (!this.isDragging) return;

        e.preventDefault();

        const containerRect = this.container.getBoundingClientRect();
        const clientX = e.type.includes('touch') ? e.touches[0].clientX : e.clientX;
        
        let offsetX = clientX - containerRect.left;
        offsetX = Math.max(0, Math.min(offsetX, containerRect.width));

        const percentage = (offsetX / containerRect.width) * 100;

        this.slider.style.left = percentage + '%';
        
        if (this.afterImage) {
          this.afterImage.style.clipPath = `inset(0 0 0 ${percentage}%)`;
        }
      }
    }

    customElements.define('before-after-slider-{{ ai_gen_id }}', BeforeAfterSlider{{ ai_gen_id }});
  })();
</script>

