{% doc %}
  @prompt
    Generate 2 before and after image, that's a square size 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-before-after-container-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    margin: 0 auto;
  }

  .ai-before-after-wrapper-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ block.settings.gap }}px;
    width: 100%;
  }

  .ai-before-after-item-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.placeholder_bg_color }};
  }

  .ai-before-after-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-before-after-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.placeholder_bg_color }};
  }

  .ai-before-after-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-before-after-label-{{ ai_gen_id }} {
    position: absolute;
    bottom: {{ block.settings.label_position }}px;
    left: 50%;
    transform: translateX(-50%);
    background-color: {{ block.settings.label_bg_color }};
    color: {{ block.settings.label_text_color }};
    padding: {{ block.settings.label_padding }}px {{ block.settings.label_padding | times: 2 }}px;
    border-radius: {{ block.settings.label_border_radius }}px;
    font-size: {{ block.settings.label_font_size }}px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  @media screen and (max-width: 749px) {
    .ai-before-after-wrapper-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.gap | times: 0.75 }}px;
    }

    .ai-before-after-label-{{ ai_gen_id }} {
      font-size: {{ block.settings.label_font_size | times: 0.9 }}px;
      padding: {{ block.settings.label_padding | times: 0.8 }}px {{ block.settings.label_padding | times: 1.6 }}px;
    }
  }
{% endstyle %}

<before-after-images-{{ ai_gen_id }}
  class="ai-before-after-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-before-after-wrapper-{{ ai_gen_id }}">
    <div class="ai-before-after-item-{{ ai_gen_id }}">
      {% if block.settings.before_image_1 %}
        <img
          src="{{ block.settings.before_image_1 | image_url: width: 1000 }}"
          alt="{{ block.settings.before_image_1.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.before_image_1.width }}"
          height="{{ block.settings.before_image_1.height }}"
          class="ai-before-after-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-before-after-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
      <div class="ai-before-after-label-{{ ai_gen_id }}">
        {{ block.settings.before_label_1 }}
      </div>
    </div>

    <div class="ai-before-after-item-{{ ai_gen_id }}">
      {% if block.settings.after_image_1 %}
        <img
          src="{{ block.settings.after_image_1 | image_url: width: 1000 }}"
          alt="{{ block.settings.after_image_1.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.after_image_1.width }}"
          height="{{ block.settings.after_image_1.height }}"
          class="ai-before-after-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-before-after-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
      <div class="ai-before-after-label-{{ ai_gen_id }}">
        {{ block.settings.after_label_1 }}
      </div>
    </div>

    <div class="ai-before-after-item-{{ ai_gen_id }}">
      {% if block.settings.before_image_2 %}
        <img
          src="{{ block.settings.before_image_2 | image_url: width: 1000 }}"
          alt="{{ block.settings.before_image_2.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.before_image_2.width }}"
          height="{{ block.settings.before_image_2.height }}"
          class="ai-before-after-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-before-after-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
      <div class="ai-before-after-label-{{ ai_gen_id }}">
        {{ block.settings.before_label_2 }}
      </div>
    </div>

    <div class="ai-before-after-item-{{ ai_gen_id }}">
      {% if block.settings.after_image_2 %}
        <img
          src="{{ block.settings.after_image_2 | image_url: width: 1000 }}"
          alt="{{ block.settings.after_image_2.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.after_image_2.width }}"
          height="{{ block.settings.after_image_2.height }}"
          class="ai-before-after-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-before-after-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
      <div class="ai-before-after-label-{{ ai_gen_id }}">
        {{ block.settings.after_label_2 }}
      </div>
    </div>
  </div>
</before-after-images-{{ ai_gen_id }}>

