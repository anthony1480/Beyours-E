{% doc %}
  @prompt
    generate 2 comaprison images that are suqare shape 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-comparison-images-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-comparison-images__container-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap_between_images }}px;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
  }

  .ai-comparison-images__item-{{ ai_gen_id }} {
    flex: 1;
    min-width: 250px;
    max-width: {{ block.settings.image_max_width }}px;
  }

  .ai-comparison-images__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    border: {{ block.settings.border_thickness }}px solid {{ block.settings.border_color }};
    background-color: {{ block.settings.placeholder_bg_color }};
  }

  .ai-comparison-images__image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-comparison-images__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-comparison-images__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-comparison-images__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    font-size: 13px;
    color: {{ block.settings.text_color }};
    text-align: center;
    pointer-events: none;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
  }

  .ai-comparison-images__label-{{ ai_gen_id }} {
    margin-top: {{ block.settings.label_spacing }}px;
    text-align: center;
    font-size: {{ block.settings.label_font_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: {{ block.settings.label_font_weight }};
  }

  .ai-comparison-images__divider-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: {{ block.settings.divider_font_size }}px;
    color: {{ block.settings.divider_color }};
    font-weight: 600;
    min-width: 40px;
  }

  @media screen and (max-width: 749px) {
    .ai-comparison-images__container-{{ ai_gen_id }} {
      gap: {{ block.settings.gap_between_images | times: 0.7 }}px;
    }

    .ai-comparison-images__item-{{ ai_gen_id }} {
      min-width: 150px;
    }

    .ai-comparison-images__divider-{{ ai_gen_id }} {
      width: 100%;
      margin: 10px 0;
    }
  }
{% endstyle %}

<comparison-images-{{ ai_gen_id }}
  class="ai-comparison-images-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-comparison-images__container-{{ ai_gen_id }}">
    <div class="ai-comparison-images__item-{{ ai_gen_id }}">
      <div class="ai-comparison-images__image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image_1 %}
          <img
            src="{{ block.settings.image_1 | image_url: width: 800 }}"
            alt="{{ block.settings.image_1.alt | escape }}"
            loading="lazy"
            width="800"
            height="800"
          >
        {% else %}
          <div class="ai-comparison-images__placeholder-{{ ai_gen_id }}">
            {{ 'product-1' | placeholder_svg_tag }}
            <div class="ai-comparison-images__empty-state-{{ ai_gen_id }}">
              Add first image
            </div>
          </div>
        {% endif %}
      </div>
      {% if block.settings.label_1 != blank %}
        <div class="ai-comparison-images__label-{{ ai_gen_id }}">
          {{ block.settings.label_1 }}
        </div>
      {% endif %}
    </div>

    {% if block.settings.show_divider %}
      <div class="ai-comparison-images__divider-{{ ai_gen_id }}">
        {{ block.settings.divider_text }}
      </div>
    {% endif %}

    <div class="ai-comparison-images__item-{{ ai_gen_id }}">
      <div class="ai-comparison-images__image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image_2 %}
          <img
            src="{{ block.settings.image_2 | image_url: width: 800 }}"
            alt="{{ block.settings.image_2.alt | escape }}"
            loading="lazy"
            width="800"
            height="800"
          >
        {% else %}
          <div class="ai-comparison-images__placeholder-{{ ai_gen_id }}">
            {{ 'product-1' | placeholder_svg_tag }}
            <div class="ai-comparison-images__empty-state-{{ ai_gen_id }}">
              Add second image
            </div>
          </div>
        {% endif %}
      </div>
      {% if block.settings.label_2 != blank %}
        <div class="ai-comparison-images__label-{{ ai_gen_id }}">
          {{ block.settings.label_2 }}
        </div>
      {% endif %}
    </div>
  </div>
</comparison-images-{{ ai_gen_id }}>

<script>
  (function() {
    class ComparisonImages{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.style.display = 'block';
      }
    }

    customElements.define('comparison-images-{{ ai_gen_id }}', ComparisonImages{{ ai_gen_id }});
  })();
</script>

